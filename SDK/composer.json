{
    "name": "odiadev/tts-sdk",
    "description": "Professional Text-to-Speech SDK for Nigerian and US English Voices - Compatible with OpenAI TTS API format",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ODIADEV",
            "email": "support@odia.dev"
        }
    ],
    "keywords": [
        "tts",
        "text-to-speech",
        "nigerian",
        "voice",
        "ai",
        "speech",
        "audio",
        "openai",
        "compatible",
        "elevenlabs",
        "alternative"
    ],
    "homepage": "https://tts-api.odia.dev",
    "support": {
        "issues": "https://github.com/odiadev/odiadev-tts-sdk/issues",
        "source": "https://github.com/odiadev/odiadev-tts-sdk"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ODIADEV\\TTS\\": "src/"
        },
        "files": [
            "odiadev-tts-php-sdk.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ODIADEV\\TTS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
